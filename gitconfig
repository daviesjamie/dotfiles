[core]
    editor = vim
    excludesfile = ~/.gitignore

[push]
    default = simple

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    status = auto
    ui = auto

[alias]
    c   = commit
    co  = checkout
    uns = reset HEAD

    branches = branch -a
    remotes  = remote -v
    tags     = tag -l

[include]
    path = ~/.gitconfig.local
