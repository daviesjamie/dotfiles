[core]
    editor = vim
    excludesfile = ~/.gitignore

[push]
    default = simple

[pager]
    log = less --quit-if-one-screen --no-init --RAW-CONTROL-CHARS --chop-long-lines

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    status = auto
    ui = auto

[alias]
    aa    = add --all
    amend = commit --amend
    c     = commit
    co    = checkout
    di    = diff
    dc    = diff --cached
    ds    = diff --stat
    st    = status
    uns   = reset HEAD

    branches   = branch -a
    committers = shortlog -sn
    remotes    = remote -v
    tags       = tag -l

    # Pretty one-line logs:
    #   l  = all commits, only current branch
    #   la = all commits, all reachable refs
    #   r  = recent commits, only current branch
    #   ra = recent commits, all reachable refs
    l  = log --graph --abbrev-commit --date=relative --pretty=format:'%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset'
    la = !git l --all
    r  = !git l -20
    ra = !git r --all

[include]
    path = ~/.gitconfig.local
