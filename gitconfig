[core]
    editor = vim
    excludesfile = ~/.gitignore

[push]
    default = simple

[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    status = auto
    ui = auto

[alias]
    aa    = add --all
    amend = commit --amend
    c     = commit
    co    = checkout
    di    = diff
    dc    = diff --cached
    ds    = diff --stat
    st    = status
    uns   = reset HEAD

    branches = branch -a
    remotes  = remote -v
    tags     = tag -l

[include]
    path = ~/.gitconfig.local
