[colors]
background = #1d1f21
foreground = #e0e0e0

red = #cc6666
orange = #de935f
yellow = #f0c674
green = #b5bd68
teal = #8abeb7
blue = #81a2be
purple = #b294bb
lightgrey = #969896
darkgrey = #373b41

[bar/daviesjamie]
; Specify the monitor this bar should run on
; $MONITOR is set by `launch-polybar` script, to run a bar on each monitor
monitor = ${env:MONITOR:}

bottom = true
width = 100%
height = 20

background = ${colors.background}
foreground = ${colors.foreground}

; Space at each end of the bar
padding-right = 1

; Space between modules
module-margin = 2

; Fonts
font-0 = fixed:pixelsize=9;2
font-1 = unifont:fontformat=truetype:size=8:antialias=false
font-2 = siji:pixelsize=9;2

; The modules to be shown
modules-left = i3
modules-right = pavolume battery date

; System tray
tray-position = right
tray-padding = 2
tray-maxsize = 12

; Draw bar outside of i3's root
wm-restack = i3


[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
pin-workspaces = true

; Click on a workspace to switch to it
enable-click = true

; Scroll on workspaces to cycle them
enable-scroll = true

; Make scrolling on workspaces wrap around
wrapping-scroll = true


[module/pavolume]
type = custom/script
tail = true
label = %output%
format-prefix = " "
exec = ~/bin/pavolume --listen
click-right = exec pavucontrol
click-left = pactl set-sink-mute @DEFAULT_SINK@ toggle
scroll-up = pactl set-sink-volume @DEFAULT_SINK@ +5%
scroll-down = pactl set-sink-volume @DEFAULT_SINK@ -5%

# Use volume mapping (similar to amixer -M)
mapped = true

label-muted = MUTE
format-muted-foreground = ${colors.lightgrey}


[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

# Set icon based on battery state
format-charging = "  <label-charging>"
format-discharging = <ramp-capacity> <label-discharging>
format-full-prefix = " "
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 


[module/date]
type = internal/date

interval = 5

date = %d %b %Y
time = %H:%M
label = %date% %time%
