[colors]
background = #1d1f21
foreground = #e0e0e0

red = #cc6666
orange = #de935f
yellow = #f0c674
green = #b5bd68
teal = #8abeb7
blue = #81a2be
purple = #b294bb
lightgrey = #969896
darkgrey = #373b41

[bar/daviesjamie]
; Specify the monitor this bar should run on
; $MONITOR is set by `launch-polybar` script, to run a bar on each monitor
monitor = ${env:MONITOR:}

bottom = true
width = 100%
height = 20

background = ${colors.background}
foreground = ${colors.foreground}

; Space at each end of the bar
padding-right = 1

; Space between modules
module-margin-left = 2
module-margin-right = 1

; Fonts
font-0 = fixed:pixelsize=9;2
font-1 = unifont:fontformat=truetype:size=8:antialias=false
font-2 = siji:pixelsize=9;2

; The modules to be shown
modules-left = i3
modules-right = music wifi pavolume battery date

; System tray
tray-position = right
tray-padding = 2
tray-maxsize = 12

; Draw bar outside of i3's root
wm-restack = i3


[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
pin-workspaces = true

; Click on a workspace to switch to it
enable-click = true

; Scroll on workspaces to cycle them
enable-scroll = true

; Make scrolling on workspaces wrap around
wrapping-scroll = true

# How to display the mode (such as 'resize')
label-mode = %mode%
label-mode-padding = 1

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.darkgrey}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-padding = 1

; label-urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.red}
label-urgent-padding = 1


[module/wifi]
type = internal/network
interface = wlp2s0

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%

label-disconnected = ""
label-disconnected-foregound = ${colors.lightgrey}

ramp-signal-0 = ""
ramp-signal-1 = ""
ramp-signal-2 = ""
ramp-signal-3 = ""
ramp-signal-4 = ""
ramp-signal-5 = ""


[module/music]
type = custom/script
interval = 2

label = %output%
exec = ~/.config/polybar/mpris.sh
click-left = playerctl play-pause
click-middle = playerctl previous
click-right = playerctl next


[module/pavolume]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/pavolume.sh --listen
click-right = exec pavucontrol
click-left = pactl set-sink-mute @DEFAULT_SINK@ toggle
scroll-up = pactl set-sink-volume @DEFAULT_SINK@ +5%
scroll-down = pactl set-sink-volume @DEFAULT_SINK@ -5%

# Use volume mapping (similar to amixer -M)
mapped = true

label-muted = MUTE
format-muted-foreground = ${colors.lightgrey}


[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

# Set icon based on battery state
format-charging = "  <label-charging>"
format-discharging = <ramp-capacity> <label-discharging>
format-full-prefix = " "
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 


[module/date]
type = internal/date

interval = 5

date = %a %d %b
time = %H:%M

# Alt labels are shown when module is clicked
date-alt = %A %d %B %Y
time-alt = %H:%M

label = %date% %time%
